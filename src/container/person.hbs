{{#with person}}
  <section>
    <div class='alert alert-success text-center'>
      <h1>{{name}}:</h1>
      <ul>
        <p>Age: {{age}}</p>
        <p>Gender: {{gender}}</p>
        <p>
          <Address>
            Address:
            {{#with address}}
              {{street}},
              {{city}},
              {{state}},
              {{zip}},
              {{country}}
            {{/with}}
          </Address>
        </p>
      </ul>
    </div>
    <hr />
    <div class='text-end'>
      <h2>Education: </h2>
      {{#each education}}
        <ul>
          <p><b> Degree: </b>{{degree}}</p>
          <p><b> Major: </b>{{major}}</p>
          <p><b> Iniversity: </b>{{university}}</p>
          <p><b>Graduations:</b>{{graduationYear}}</p>
        </ul>
      {{/each}}
    </div>
    <br />

    <h2>Work experience: </h2>
    {{#each workExperience}}
      <div>
        <ul>
          <p><b> Company: </b>{{company}}</p>
          <p><b> Profession: </b>{{title}}</p>
          <p><b> Duration: </b>{{startDate}}to
            {{endDate}}</p>
          <p><b> Responsibilities: </b></p>
          <ul>
            {{#each responsibilities}}
              <li>{{this}}</li>
            {{/each}}
          </ul>
          <p><b> Year founded: </b>{{year_founded}}</p>
          <p><b> Industry: </b>{{industry}}</p>
        </ul>
      </div>
      <br />
      <h2>Employees:</h2>
      <ul>
        {{#each employees}}
          <p><b> Name: </b>{{name}}</p>
          <p><b> Position: </b>{{position}}</p>
          <p><b> Department: </b>{{department}}</p>
          <h3><b> Projects: </b></h3>
          <ul>
            {{#each projects}}
              <p><b> Name: </b>{{name}}</p>
              <p><b> Description: </b>{{description}}</p>
              <p><b> Status: </b>{{status}}</p>
              <h3><b> Teams: </b></h3>
              <ul>
                {{#each teams}}
                  <p><b> Team name: </b>{{team_name}}</p>
                  {{#with team_leader}}
                    <p> {{name}} ({{title}})</p>
                    <p>
                      <a
                        href='john.smith@example.com'
                      >{{email}}</a></p>
                  {{/with}}
                  <h3>Members:</h3>
                  <ul>
                    {{#each team_members}}
                      <p><b> Name: </b>{{name}}</p>
                      <p><b> Profession: </b>{{title}}</p>
                      <p><b> Email: </b>
                        <a
                          href='alice.johnson@example.com'
                        >{{email}}</a></p>
                      <p><b> Skills: </b>{{skills}}</p>
                      <h3><b> Teams: </b></h3>
                      <ul>
                        {{#each projects}}
                          <p><b> Name: </b>{{name}}</p>
                          <p><b
                            >Description:</b>{{description}}</p>
                          <p><b
                            >Technologies:</b>{{technologies}}</p>
                          <h3><b> Members: </b></h3>
                          <ul>
                            {{#each team_members}}
                              <p><b> Name: </b>{{name}}</p>
                              <p><b
                                >Profession:</b>{{title}}</p>
                            {{/each}}
                          </ul>
                        {{/each}}
                      </ul>
                    {{/each}}
                  </ul>
                {{/each}}
              </ul>
            {{/each}}
          </ul>
        {{/each}}
      </ul>
    {{/each}}
  </section>
{{/with}}